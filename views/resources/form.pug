form(action=(resource ? `/resources/update` : "/addBook"), method="POST")
  if resource
    input(type="hidden", name="id", value=resource.id)

  .form-group
    label Book Name
    input.form-control(name="resource[name]", required, value=(resource ? resource.name : null))
    
  .form-group
    label Author
    input.form-control(name="resource[author]", required, value=(resource ? resource.author : null))

  .form-group
    label Affiliation
    input.form-control(name="resource[title]", required, value=(resource ? resource.affiliation : null))
  
  .form-group
    button.btn.btn-dark(type="submit") Submit